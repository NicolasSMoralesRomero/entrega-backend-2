<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito</title>
</head>

<body>
    <h1>Productos en el Carrito</h1>
    <div id="cartItems">
        {{#each cart}}
        <div class="cart-item">
            <span>{{this.title}} - Cantidad: {{this.quantity}}</span>
            <div>
                <button onclick="updateQuantity('{{this.productId}}', 1)">+</button>
                <button onclick="updateQuantity('{{this.productId}}', -1)">-</button>
                <button onclick="removeFromCart('{{this.productId}}')">Eliminar</button>
            </div>
        </div>
        {{/each}}
    </div>
    <div class="total">
        Total: {{total}}
    </div>
    <button onclick="clearCart()">Vaciar Carrito</button>
    <a href="/realtimeproducts">Volver a la tienda</a>

    <script>
        function updateQuantity(productId, change) {
            fetch(`/api/carts/670457eadbee7b2e09aacd6f/products/${productId}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ quantity: change })
            })
                .then(response => {
                    if (response.ok) {
                        alert('Cantidad actualizada');
                        location.reload();
                    } else {
                        alert('Error al actualizar la cantidad');
                    }
                });
        }

        function removeFromCart(productId) {
            fetch(`/api/carts/670457eadbee7b2e09aacd6f/products/${productId}`, {
                method: 'DELETE'
            })
                .then(response => {
                    if (response.ok) {
                        alert('Producto eliminado del carrito');
                        location.reload();
                    } else {
                        alert('Error al eliminar el producto del carrito');
                    }
                });
        }

        function clearCart() {
            fetch(`/api/carts/670457eadbee7b2e09aacd6f/products`, {
                method: 'DELETE'
            })
                .then(response => {
                    if (response.ok) {
                        alert('Carrito vac√≠o');
                        location.reload();
                    } else {
                        alert('Error al vaciar el carrito');
                    }
                });
        }
    </script>
</body>

</html>