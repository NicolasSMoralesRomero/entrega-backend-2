<div class="container mt-5">
    <h2 class="text-center mb-4">Bienvenido a Nuestra Tienda</h2>

    <p class="text-center mb-4">Aquí puedes encontrar los mejores productos.</p>
    
    <div class="text-center">
        <a href="/api/products" class="btn btn-primary">Ver Productos</a>
    </div>
</div>

{{#if isSession}}
<!-- Si el usuario está logueado -->
<div class="container mt-4">
    <ul class="list-group">
        <li class="list-group-item">
            <a href="/api/sessions/profile" class="btn btn-info w-100">Ir al Perfil</a>
        </li>
    </ul>
</div>
{{else}}
<!-- Si el usuario no está logueado -->
<div class="container mt-4">
    <ul class="list-group">
        <li class="list-group-item">
            <a href="/api/sessions/login" class="btn btn-primary w-100">Iniciar Sesión</a>
        </li>
        <li class="list-group-item">
            <a href="/api/sessions/register" class="btn btn-primary w-100">Regístrate</a>
        </li>
    </ul>
</div>
{{/if}}