<div class="m-3 bg-light rounded-4 p-3">
  <h1> Iniciar Sesión </h1>
  <form action="/api/sessions/login" method="POST">
    <div class="form-group">
      <label for="email"> Email </label>
      <input type="email" name="email" id="email" class="form-control" />
    </div>
    <div class="form-group">
      <label for="password"> Password </label>
      <input type="password" name="password" id="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-2 w-100"> Iniciar Sesión </button>
  </form>

  <div class="mt-3">
    <a href="/api/sessions/register" class="btn btn-primary w-100 mb-2">
      <i class="bi bi-pencil-square"></i> Registrarse
    </a>
  </div>

  <div>
    <a href="/api/sessions/github" class="btn btn-secondary w-100 mt-3">
      Entrar con Github
    </a>
  </div>
</div>

